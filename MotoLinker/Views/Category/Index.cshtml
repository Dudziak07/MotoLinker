@model IEnumerable<MotoLinker.Models.Category>

<h1>Kategorie</h1>
<a asp-action="Create" class="btn btn-primary">Dodaj kategorię</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Nazwa</th>
            <th>Nadrzędna</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>@category.ParentCategory?.Name ?? "Brak"</td>
            </tr>
        }
    </tbody>
</table>
