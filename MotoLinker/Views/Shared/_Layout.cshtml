<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotoLinker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MotoLinker.styles.css" asp-append-version="true" />
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MotoLinker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Announcement" asp-action="List">Ogłoszenia</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") == "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-warning text-light me-2" asp-controller="Admin" asp-action="Index">Panel administratora</a>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-light me-2">
                                    Zalogowany jako: @HttpContextAccessor.HttpContext.Session.GetString("Username")
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger text-white" asp-controller="Auth" asp-action="Logout">Wyloguj się</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white me-2" asp-controller="Auth" asp-action="Login">Zaloguj się</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-secondary text-white" asp-controller="Auth" asp-action="Register">Zarejestruj się</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container flex-grow-1">
        @RenderBody()
    </main>
    <footer>
        <div class="container text-center">
            &copy; 2025 MotoLinker. Wszystkie prawa zastrzeżone.
            <br />
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-primary">Polityka prywatności</a>
        </div>
    </footer>
</body>
</html>