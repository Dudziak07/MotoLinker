@page
@model MotoLinker.Models.Announcement

<h1>Usuń ogłoszenie</h1>
<p>Czy na pewno chcesz usunąć to ogłoszenie?</p>

<div>
    <p>
        <strong>Tytuł:</strong> @Model.Title
    </p>
    <p>
        <strong>Opis:</strong> @Model.Description
    </p>
    <p>
        <strong>Cena:</strong> @Model.Price PLN
    </p>
    <p>
        <strong>Lokalizacja:</strong> @Model.Location
    </p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AnnouncementId" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="List" class="btn btn-secondary">Anuluj</a>
</form>