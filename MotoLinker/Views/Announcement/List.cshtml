            <th>Lokalizacja</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Data dodania</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var announcement in Model)
        {
            <tr>
                <td>@announcement.AnnouncementId</td>
                <td>@announcement.Title</td>
                <td>@announcement.Price PLN</td>
                <td>@announcement.Location</td>
                <td>@announcement.Brand</td>
                <td>@announcement.Model</td>
                <td>@announcement.DateAdded.ToString("yyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@announcement.AnnouncementId" class="btn btn-info">Szczegó³y</a>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("UserId") != null &&
                        (HttpContextAccessor.HttpContext.Session.GetString("UserId") == announcement.UserId.ToString() ||
                         HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") == "True"))
                    {
                        <a asp-action="Edit" asp-route-id="@announcement.AnnouncementId" class="btn btn-warning">Edytuj</a>
                        <form asp-action="Delete" asp-route-id="@announcement.AnnouncementId" method="post" style="display:inline;" onsubmit="return confirm('Czy na pewno chcesz usun¹æ to og³oszenie?');">
                            <button type="submit" class="btn btn-danger">Usuñ</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>