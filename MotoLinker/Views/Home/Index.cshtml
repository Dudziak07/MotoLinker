@{
    ViewData["Title"] = "MotoLinker - Strona Główna";
}

<div class="container mt-5">
    <!-- Nagłówek -->
    <header class="text-center">
        <h1>Witamy na MotoLinker</h1>
        <p>Znajdź wymarzony pojazd w zasięgu ręki</p>
    </header>

    <!-- Sekcja wyszukiwania -->
    <section class="search-section my-4">
        <h2>Wyszukaj pojazd</h2>
        <form class="row g-3">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Marka lub model" />
            </div>
            <div class="col-md-3">
                <input type="number" class="form-control" placeholder="Rok od" min="1886" max="@DateTime.Now.Year" />
            </div>
            <div class="col-md-3">
                <input type="number" class="form-control" placeholder="Rok do" min="1886" max="@DateTime.Now.Year" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Szukaj</button>
            </div>
        </form>
    </section>

    <!-- Sekcja promowanych ogłoszeń -->
    <section class="promoted-section">
        <h2>Promowane ogłoszenia</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Samochód 1" />
                    <div class="card-body">
                        <h5 class="card-title">Samochód 1</h5>
                        <p class="card-text">Cena: 50 000 PLN</p>
                        <a href="#" class="btn btn-primary">Szczegóły</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Samochód 2" />
                    <div class="card-body">
                        <h5 class="card-title">Samochód 2</h5>
                        <p class="card-text">Cena: 40 000 PLN</p>
                        <a href="#" class="btn btn-primary">Szczegóły</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://via.placeholder.com/150" class="card-img-top" alt="Samochód 3" />
                    <div class="card-body">
                        <h5 class="card-title">Samochód 3</h5>
                        <p class="card-text">Cena: 30 000 PLN</p>
                        <a href="#" class="btn btn-primary">Szczegóły</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
