@model MotoLinker.Models.HomeIndexViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="container mt-5">
    <h1 class="text-center mb-4">@Localizer["WelcomeMotoLinker"]</h1>
    <p class="text-center text-muted">@Localizer["FindDreamVehicle"]</p>
    <h2 class="text-center my-5">@Localizer["LatestAdded"]</h2>
    <div class="row">
        @foreach (var announcement in Model.LatestAnnouncements)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Zdjęcie ogłoszenia">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@announcement.Title</h5>
                        <p class="card-text">@announcement.Description</p>
                        <a asp-action="Details" asp-route-id="@announcement.AnnouncementId" class="btn btn-primary w-100">Szczegóły</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>