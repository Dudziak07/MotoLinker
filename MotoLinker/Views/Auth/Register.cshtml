@model MotoLinker.Models.User

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1>@Localizer["RegisterTitle"]</h1>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="username">@Localizer["Username"]</label>
        <input type="text" id="username" name="Username" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="email">@Localizer["Email"]</label>
        <input type="email" id="email" name="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="password">@Localizer["Password"]</label>
        <input type="password" id="password" name="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["RegisterButton"]</button>
</form>